<?xml version="1.0" encoding="UTF-8"?>
<Element xmlns="urn:fdc:difi.no:2017:vefa:structure-1" cardinality="0..1">
    <Term>cac:PartyTaxScheme</Term>
    <Description>Information about VAT</Description>

    <Element>
        <Term>cbc:CompanyID</Term>
        <Name>Buyer VAT identifier</Name>
        <Description>The buyers registered  Value Added Tax identifier. To be stated in case reverse charge is to apply to the purchase.</Description>

        <Attribute>
            <Term>schemeID</Term>
            <Description>Must be according to "PEPPOL policy for identifiers".</Description>
            <Reference type="CODE_LIST">ICD</Reference>
            <Value type="EXAMPLE">NO:VAT</Value>
        </Attribute>

        <Value type="EXAMPLE">931186755MVA</Value>
    </Element>

    <Element>
        <Term>cac:TaxScheme</Term>
        <Description>Information about Tax scheme</Description>

        <Element>
            <Term>cbc:ID</Term>
            <Value type="FIXED">VAT</Value>
        </Element>
    </Element>
</Element>